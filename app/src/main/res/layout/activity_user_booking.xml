<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/app_color"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sp_16"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sp_10"
            android:fontFamily="@font/roboto"
            android:text="@string/book_your_tour"
            android:textAllCaps="true"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_back"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:layout_marginBottom="@dimen/dp_80"
        android:background="@color/application_background">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/sp_16"
                    android:layout_marginEnd="@dimen/sp_16"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_select_route"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sp_16"
                        android:backgroundTint="@color/app_color"
                        android:elevation="@dimen/dp_0"
                        android:foreground="?selectableItemBackgroundBorderless"
                        app:cardCornerRadius="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_0">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="@dimen/sp_10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Select Route"
                                android:textColor="@color/app_text_color"
                                android:textSize="@dimen/sp_16"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_right_arrow" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_select_hotel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sp_16"
                        android:backgroundTint="@color/app_color"
                        android:elevation="@dimen/dp_0"
                        android:foreground="?selectableItemBackgroundBorderless"
                        app:cardCornerRadius="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_0">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="@dimen/sp_10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Select Hotel"
                                android:textColor="@color/app_text_color"
                                android:textSize="@dimen/sp_16"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_right_arrow" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_select_room"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sp_16"
                        android:backgroundTint="@color/app_color"
                        android:elevation="@dimen/dp_0"
                        android:foreground="?selectableItemBackgroundBorderless"
                        app:cardCornerRadius="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_0">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="@dimen/sp_10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Select Room"
                                android:textColor="@color/app_text_color"
                                android:textSize="@dimen/sp_16"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_right_arrow" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sp_16"
                        android:layout_marginBottom="@dimen/sp_20"
                        android:elevation="@dimen/dp_0"
                        app:cardCornerRadius="@dimen/sp_10"
                        app:cardElevation="@dimen/dp_0">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/sp_14">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/booking_info"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_16"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/sp_10"
                                android:text="@string/tour_date"
                                android:textColor="@color/app_color"
                                android:textSize="@dimen/sp_16"
                                android:textStyle="bold" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:layout_marginTop="@dimen/dp_5"
                                android:backgroundTint="#CDFBDD"
                                android:elevation="@dimen/dp_0"
                                app:cardCornerRadius="@dimen/dp_5"
                                app:cardElevation="@dimen/dp_0">

                                <EditText
                                    android:id="@+id/edt_tour_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/lite_green"
                                    android:drawableEnd="@drawable/ic_calender_icon"
                                    android:focusable="false"
                                    android:hint="@string/dd_mm_yyyy"
                                    android:paddingStart="@dimen/sp_10"
                                    android:paddingEnd="@dimen/sp_10"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_16" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/tv_facility"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/sp_10"
                                android:text="@string/room_facility"
                                android:textColor="@color/app_color"
                                android:textSize="@dimen/sp_16"
                                android:textStyle="bold" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:layout_marginTop="@dimen/dp_5"
                                android:backgroundTint="#CDFBDD"
                                android:elevation="@dimen/dp_0"
                                app:cardCornerRadius="@dimen/dp_5"
                                app:cardElevation="@dimen/dp_0">

                                <Spinner
                                    android:id="@+id/spinner_facility"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/roboto"
                                    android:paddingTop="@dimen/dp_5"
                                    android:paddingBottom="@dimen/dp_5"
                                    android:textSize="@dimen/sp_8" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/tv_food_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/sp_10"
                                android:text="@string/food_type"
                                android:textColor="@color/app_color"
                                android:textSize="@dimen/sp_16"
                                android:textStyle="bold" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:layout_marginTop="@dimen/dp_5"
                                android:backgroundTint="#CDFBDD"
                                android:elevation="@dimen/dp_0"
                                app:cardCornerRadius="@dimen/dp_5"
                                app:cardElevation="@dimen/dp_0">

                                <Spinner
                                    android:id="@+id/spinner_food_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/roboto"
                                    android:paddingTop="@dimen/dp_5"
                                    android:paddingBottom="@dimen/dp_5"
                                    android:textSize="@dimen/sp_8" />

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:id="@+id/linear_booked_route"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/sp_20"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Your Route Info"
                                    android:textColor="@color/app_color"
                                    android:textSize="@dimen/sp_16"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginTop="@dimen/sp_10"
                                    android:background="@color/black" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/sp_10"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_7"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="@dimen/dp_80"
                                            android:layout_height="wrap_content"
                                            android:text="@string/from"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/sp_14" />

                                        <TextView
                                            android:id="@+id/from"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/sp_10"
                                            android:layout_weight="1"
                                            android:textColor="@color/app_color"
                                            android:textSize="@dimen/sp_14"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/linear_address"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_7"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="@dimen/dp_80"
                                            android:layout_height="wrap_content"
                                            android:text="@string/to"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/sp_14" />

                                        <TextView
                                            android:id="@+id/to"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/sp_10"
                                            android:layout_weight="1"
                                            android:textColor="@color/app_color"
                                            android:textSize="@dimen/sp_14"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/linear_status"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_7"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_book_description"
                                            android:layout_width="@dimen/dp_80"
                                            android:layout_height="wrap_content"
                                            android:text="Amount"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/sp_14" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/sp_10"
                                            android:text="â‚¹"
                                            android:textColor="@color/app_color"
                                            android:textSize="@dimen/sp_14"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/amount"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="3dp"
                                            android:layout_weight="1"
                                            android:textColor="@color/app_color"
                                            android:textSize="@dimen/sp_14"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="@dimen/sp_10"
                                        android:background="@color/app_color" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/sp_10">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/sp_10"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:text="PickUp Point"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/sp_14"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/sp_10"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:text="Drop Point"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/sp_14"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_7">

                                        <TextView
                                            android:id="@+id/pick_up_address"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/sp_10"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:textColor="@color/app_color"
                                            android:textSize="@dimen/sp_14" />

                                        <TextView
                                            android:id="@+id/drop_address"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/sp_10"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:textColor="@color/app_color"
                                            android:textSize="@dimen/sp_14" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_7">

                                        <TextView
                                            android:id="@+id/pick_up_time"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/sp_10"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:textColor="@color/app_color"
                                            android:textSize="@dimen/sp_12" />

                                        <TextView
                                            android:id="@+id/drop_time"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/sp_10"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:textColor="@color/app_color"
                                            android:textSize="@dimen/sp_12" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linear_booked_hotel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_30"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Your Hotel Info"
                                    android:textColor="@color/app_color"
                                    android:textSize="@dimen/sp_16"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginTop="@dimen/sp_10"
                                    android:background="@color/black" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/sp_10"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="@dimen/dp_120"
                                        android:layout_height="wrap_content"
                                        android:text="@string/hotel_name"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/sp_14" />

                                    <TextView
                                        android:id="@+id/hotel_name"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/sp_10"
                                        android:layout_weight="1"
                                        android:textColor="@color/app_color"
                                        android:textSize="@dimen/sp_14"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_7"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="@dimen/dp_120"
                                        android:layout_height="wrap_content"
                                        android:text="@string/address"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/sp_14" />

                                    <TextView
                                        android:id="@+id/address"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/sp_10"
                                        android:layout_weight="1"
                                        android:textColor="@color/app_color"
                                        android:textSize="@dimen/sp_14"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_7"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="@dimen/dp_120"
                                        android:layout_height="wrap_content"
                                        android:text="Mobile Number"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/sp_14" />

                                    <TextView
                                        android:id="@+id/mobile_number"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/sp_10"
                                        android:layout_weight="1"
                                        android:textColor="@color/app_color"
                                        android:textSize="@dimen/sp_14"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linear_booked_room"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_30"
                                android:layout_marginBottom="@dimen/sp_20"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Your Room Info"
                                    android:textColor="@color/app_color"
                                    android:textSize="@dimen/sp_16"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginTop="@dimen/sp_10"
                                    android:background="@color/black" />

                                <LinearLayout
                                    android:id="@+id/linear_hotel_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/sp_10"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="@dimen/dp_120"
                                        android:layout_height="wrap_content"
                                        android:text="@string/room_facility"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/sp_14" />

                                    <TextView
                                        android:id="@+id/room_facility"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/sp_10"
                                        android:layout_weight="1"
                                        android:textColor="@color/app_color"
                                        android:textSize="@dimen/sp_14"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_7"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="@dimen/dp_120"
                                        android:layout_height="wrap_content"
                                        android:text="@string/no_of_person"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/sp_14" />

                                    <TextView
                                        android:id="@+id/person_count"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/sp_10"
                                        android:layout_weight="1"
                                        android:textColor="@color/app_color"
                                        android:textSize="@dimen/sp_14"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="There is no booking data"
                                android:visibility="gone" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_book_tour"
        style="@style/button_style"
        android:layout_marginBottom="@dimen/sp_20"
        android:background="@drawable/button_background"
        android:text="@string/book_my_tour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_300"
        android:padding="@dimen/sp_16"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/progress_login"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:indeterminateTint="@color/blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>